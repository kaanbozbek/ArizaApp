@model ArizaApp.Models.Dtos.UpdateDepartmentDto

@{
    ViewData["Title"] = "Departmanı Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><span class="font-weight-bold">@Model.DepartmentName</span> Departmanını Güncelle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
