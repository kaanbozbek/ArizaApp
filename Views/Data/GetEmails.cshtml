@model System.Collections.Generic.List<ArizaApp.Models.Entities.EmailRecord>

@{
    ViewBag.Title = "Email Adresleri";
    Layout = "_Layout";
}

<a class="btn btn-primary font-weight-bold my-3" asp-action="CreateEmail" asp-controller="Data">Email Ekle</a>

<table id="getEmails" class="display" style="width:100%">
    <thead>
    <tr class="text-center">
        <th>Email Adresi</th>
        <th>Email Açıklaması</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var email in Model)
    {
        <tr class="text-center">
            <td>@email.EmailAddress</td>
            <td>@email.EmailDescription</td>
            <td>
                @* TODO: Add detail and delete *@
                <a asp-for="EmailDetail" asp-controller="Data" asp-route-id="@email.Id" class="btn btn-danger btn-sm">Detaylar</a>
                <a asp-for="EmailDelete" asp-controller="Data" asp-route-id="@email.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <th>Email Adresi</th>
        <th>Email Açıklaması</th>
    </tr>
    </tfoot>
</table>